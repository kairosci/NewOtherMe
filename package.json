{
  "name": "il-teatro-delle-ombre",
  "productName": "Il Teatro delle Ombre",
  "private": true,
  "version": "1.0.0",
  "description": "Un viaggio nei sogni di Gennaro - RPG narrativo",
  "author": {
    "name": "TheMaskerati",
    "email": "info@themaskerati.com"
  },
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5175 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "lint": "biome check ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src",
    "prepare": "husky",
    "android:init": "npx cap add android",
    "android:sync": "npm run build && npx cap sync",
    "android:open": "npx cap open android"
  },
  "build": {
    "appId": "com.maskerati.teatrodelleombre",
    "productName": "Il Teatro delle Ombre",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "cscLink": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Game"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.games"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^25.1.0",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "husky": "^9.1.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "phaser": "^3.90.0"
  }
}
